        document.addEventListener('DOMContentLoaded', function() {
            initNavigation();
            loadDashboard();
            loadBookTable();
            setupEventListeners();
            updateStats();
        });
        
        // 初始化导航
        function initNavigation() {
            // 顶部导航
            document.querySelectorAll('.nav-link').forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // 更新活跃状态
                    document.querySelectorAll('.nav-link').forEach(l => l.classList.remove('active'));
                    this.classList.add('active');
                    
                    // 显示对应内容
                    const tabId = this.getAttribute('data-tab');
                    document.querySelectorAll('.tab-content').forEach(tab => {
                        tab.classList.remove('active');
                    });
                    document.getElementById(tabId).classList.add('active');
                    
                    // 特殊处理：如果点击添加图书按钮，跳转到数据录入
                    if (this.id === 'addBookBtn') {
                        document.querySelectorAll('.nav-link').forEach(l => l.classList.remove('active'));
                        document.querySelector('[data-tab="data-entry"]').classList.add('active');
                        
                        document.querySelectorAll('.tab-content').forEach(tab => {
                            tab.classList.remove('active');
                        });
                        document.getElementById('data-entry').classList.add('active');
                    }
                });
            });
            
            // 侧边栏导航
            document.querySelectorAll('.sidebar .nav-link').forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // 更新活跃状态
                    document.querySelectorAll('.sidebar .nav-link').forEach(l => l.classList.remove('active'));
                    this.classList.add('active');
                    
                    // 显示对应内容
                    const tabId = this.getAttribute('data-tab');
                    document.querySelectorAll('.tab-content').forEach(tab => {
                        tab.classList.remove('active');
                    });
                    document.getElementById(tabId).classList.add('active');
                });
            });
        }
        
        // 设置事件监听器
        function setupEventListeners() {
            // 图书表单提交
            document.getElementById('bookForm').addEventListener('submit', function(e) {
                e.preventDefault();
                addBook();
            });
            
            // 搜索功能
            document.getElementById('searchInput').addEventListener('input', function() {
                filterBooks(this.value);
            });
            
            // 导出类型变化
            document.getElementById('exportType').addEventListener('change', function() {
                const categoryContainer = document.getElementById('categorySelectContainer');
                if (this.value === 'byCategory') {
                    categoryContainer.style.display = 'block';
                } else {
                    categoryContainer.style.display = 'none';
                }
            });
            
            // 导出数据
            document.getElementById('exportData').addEventListener('click', exportData);
            
            // 预览数据
            document.getElementById('previewData').addEventListener('click', previewData);
            
            // 刷新统计
            document.getElementById('refreshStats').addEventListener('click', updateStats);
            
            // 返回查询
            document.getElementById('backToQuery').addEventListener('click', function() {
                document.querySelectorAll('.nav-link').forEach(l => l.classList.remove('active'));
                document.querySelector('[data-tab="data-query"]').classList.add('active');
                
                document.querySelectorAll('.tab-content').forEach(tab => {
                    tab.classList.remove('active');
                });
                document.getElementById('data-query').classList.add('active');
            });
        }
        
        // 加载仪表板
        function loadDashboard() {
            updateStats();
            loadRecentBooks();
        }
        
        // 更新统计信息
        function updateStats() {
            const totalBooks = books.length;
            const totalUsers = users.length;
            const borrowedBooks = books.filter(book => book.status === '借出').length;
            const availableBooks = totalBooks - borrowedBooks;
            
            document.getElementById('totalBooks').textContent = totalBooks;
            document.getElementById('totalUsers').textContent = totalUsers;
            document.getElementById('borrowedBooks').textContent = borrowedBooks;
            document.getElementById('availableBooks').textContent = availableBooks;
        }
        
        // 加载最近添加的图书
        function loadRecentBooks() {
            const recentBooks = books
                .sort((a, b) => new Date(b.created) - new Date(a.created))
                .slice(0, 5);
            
            const tbody = document.querySelector('#recentBooks tbody');
            tbody.innerHTML = '';
            
            if (recentBooks.length === 0) {
                tbody.innerHTML = '<tr><td colspan="5" class="text-center">暂无图书数据</td></tr>';
                return;
            }
            
            recentBooks.forEach(book => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${book.title}</td>
                    <td>${book.author}</
